<section class="admin-categories-show">
  <header class="page-header">
    <h1>
      Categories
    </h1>
  </header>

  <div class="well">
    <%= link_to '+ New Category', [:new, :admin, :category], class: 'btn btn-info' %>
  </div>

  <div class="panel panel-default products">

    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Category</th>
          <th>Items</th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td>
              <%= category.name%>
            </td>
            <td>
              <%= @products.count[category.id]%>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>

</section>